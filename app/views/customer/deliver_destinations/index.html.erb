<div class="container-xxl mt-5 mx-5">

  <h3><mark>配送先登録/一覧</mark></h3>

  <div class="new-deliver-destination row mt-5 pb-5" style="margin-left: 0; margin-right: 0; padding-left: 0;">
    <%= form_with model: @deliver_destination, url: customer_deliver_destinations_path, class: "col-12", local: true do |f| %>
      <%= render "customer/shared/error_messages_deliver_destination", model: f.object %>
      <%= f.label "郵便番号(ハイフンなし)", class: "col-2 mr-3" %>
      <%= f.text_field :postcode, autocomplete: "postcode", placeholder: "1500041", class: "col-2 form-ph" %>
      <div class="w-100"></div>
      <%= f.label "住所", class: "col-2 mr-3" %>
      <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区神南1-19-11", class: "col-4 form-ph" %>
      <div class="w-100"></div>
      <%= f.label "宛名", class: "col-2 mr-3" %>
      <%= f.text_field :destination, autocomplete: "destination", placeholder: "山田花子", class: "col-2 form-ph" %>
      <%= f.submit "新規登録", class: "btn btn-success col-2 offset-md-2" %>
    <% end %>
  </div>

  <div class="deliver-destination-index mt-5 row">
    <table class="table col-md-7 deliver_destination_index_table">
      <thead class="table-active border">
        <tr>
          <td class="border border-dark postcode">郵便番号</td>
          <td class="border border-dark address">住所</td>
          <td class="border border-dark destination">宛名</td>
          <td class="border border-dark btn-space"></td>
        </tr>
      </thead>
      <tbody>
        <% @deliver_destinations.each do |deliver_destination| %>
          <tr>
            <td class="border border-dark"><%= deliver_destination.postcode %></td>
            <td class="border border-dark"><%= deliver_destination.address %></td>
            <td class="border border-dark"><%= deliver_destination.destination %></td>
            <td class="border border-dark text-center">
              <%= link_to "編集する", edit_customer_deliver_destination_path(deliver_destination), class: "btn btn-success" %>
              <%= link_to "削除する", customer_deliver_destination_path(deliver_destination), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか？" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>