<div class="item-container">
  <%= link_to customer_item_path(item.id) do %>
  <%= attachment_image_tag item, :image, format: 'jpeg', fallback: 'no_image.jpg', size: '150x100' %>
  <% end %>
  <p>
    <%= link_to customer_item_path(item.id), class: "btn-link text-dark" do %>
      <%= item.name %>
    <% end %>
  </p>
  <% if item.is_active == true %>
    <p><%= item.price.to_s(:delimited) %> 円</p>
  <% elsif item.is_active == false %>
    <p>売り切れ中</p>
  <% end %>
</div>
